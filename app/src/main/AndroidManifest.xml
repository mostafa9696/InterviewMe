<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mostafahussien.interviewme">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.AndroidActivity"
            android:theme="@style/MyTheme" />

        <service android:name=".BackgroundTask.InsertService" />
        <service android:name=".BackgroundTask.RetriveService" />
        <service android:name=".BackgroundTask.RetriveFavoriteService" />

        <activity
            android:name=".Activity.QuestioneActivity"
            android:theme="@style/MyTheme" />
        <activity android:name=".Activity.FavoriteActivity"></activity>
    </application>

</manifest>
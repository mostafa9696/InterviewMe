<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mostafahussien.interviewme.MainActivity"
    >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/interview"
            android:scaleType="fitXY"
            android:alpha="0.40"
            />
        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="vertical">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/android_button_selector"
            android:src="@drawable/android"
            android:layout_margin="5dp"
            android:layout_weight="5"
            android:id="@+id/android_btn"
            android:scaleType="centerInside"
            />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/java_button_selector"
            android:src="@drawable/java_logo"
            android:layout_margin="5dp"
            android:layout_weight="5"
            android:id="@+id/java_btn"
            />
        </LinearLayout>
</RelativeLayout>


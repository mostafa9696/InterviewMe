<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notification_card_child"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="8dp"
    card_view:cardUseCompatPadding="true"
    android:theme="@style/MyTheme"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/question_container"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/questionText"
            android:text="what is the main  ?"
            android:textSize="21sp"
            android:layout_marginLeft="5dp"
            android:id="@+id/question_id"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="55dp"
            />
            <com.like.LikeButton
                app:icon_type="heart"
                app:icon_size="25dp"
                android:id="@+id/fav_button"
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:liked="false"
                app:dots_primary_color="@color/colorAccent"
                app:dots_secondary_color="@color/colorPrimary"
                app:anim_scale_factor="1"
                android:layout_marginTop="3dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="7dp"
                />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_arrow_drop_up_black_24dp"
                android:id="@+id/expand_arrow"
                android:layout_below="@+id/fav_button"
                android:layout_alignParentRight="true"
                android:layout_marginRight="3dp"
                />
        </RelativeLayout>
    <com.github.aakira.expandablelayout.ExpandableLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/expandable_list"
        android:orientation="vertical"
        app:ael_duration="400"
        app:ael_interpolator="bounce"
        app:ael_expanded="false"
        android:layout_below="@+id/question_container"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:layout_margin="5dp"
            android:text="test test"
            android:id="@+id/answer_id"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:textColor="@color/answerText"
            />
    </com.github.aakira.expandablelayout.ExpandableLinearLayout>
        </RelativeLayout>
</android.support.v7.widget.CardView>
